local latex_augroup = vim.api.nvim_create_augroup('LatexCustomHighlighting', { clear = true })

vim.api.nvim_create_autocmd('FileType', {
  group = latex_augroup,
  pattern = 'tex',
  callback = function()
    vim.api.nvim_set_hl(
      0,
      '@texTheoremTag',
      { link = 'texRefArg' }
    )
  end,
})
